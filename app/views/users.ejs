<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style/base.css">
    <link rel="stylesheet" href="/style/user.css">
    <title>Tableau de bord des utilisateurs</title>
</head>
<body>
    <%- include('partials/header') %>

    <main>
        <div>
            <h2>Gestion des accès</h2>
            <a href="/users/add" class="button">Créer un nouvel utilisateur</a>
        </div>
        <div>
            <h2>Les utilisateurs inscrits</h2>
            <% if (typeof users !== 'undefined' && users.length > 0) { %>
                <% users.forEach(user => { %>
                    <p class="user-list">
                        <%= user.username %> - <%= user.email %>
                        <a href="/users/<%= user._id %>/detail">Détails</a>
                        <a href="/users/<%= user._id %>/edit">Modifier</a>
                        <form action="/users/<%= user._id %>?_method=DELETE" method="POST" style="display:inline;">
                            <button type="submit" class="btn-delete" onclick="return confirm('Supprimer cet agent ?')">Supprimer</button>
                        </form>
                    </p>
                <% }) %>
            <% } else { %>
                <p>Aucun agent enregistré.</p>
            <% } %> 
        </div>

        <a href="/dashboard" class="btn-secondary">Retour au tableau de bord</a>
    </main>

    <%- include('partials/footer') %>
</body>
</html>